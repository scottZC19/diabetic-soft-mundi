            <Button
                android:id="@+id/btndietadesayuno14"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Huevos cocidos + manzana "
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/btndietadesayuno15"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Tortilla de claras + ensalada"
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/btndietadesayuno16"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Batido de avena + huevo"
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/btndietadesayuno17"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Enrrollado de palta + queso"
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/btndietadesayuno18"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Sándwich de queso + jugo de frutas"
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/btndietadesayuno19"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Bold de avena + frutos secos"
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/btndietadesayuno20"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:backgroundTint="#9D7150"
                android:text="Café + tostada y huevos revuelto"
                app:cornerRadius="25dp"
                app:icon="@drawable/desayunoicn"
                app:iconGravity="textEnd"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

        </LinearLayout>
